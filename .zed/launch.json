{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "custom",
      "request": "launch",
      "name": "Build and Run Playdate Game",
      "command": "${workspace}/build_and_run.sh",
      "args": ["build"],
      "cwd": "${workspace}",
      "platform": {
        "linux": { "shell": { "path": "bash" } },
        "macos": { "shell": { "path": "bash" } },
        "windows": { "shell": { "path": "powershell.exe", "args": ["-ExecutionPolicy", "Bypass", "-File"] } }
      }
    },
    {
      "type": "custom",
      "request": "launch",
      "name": "Run Playdate Game (No Build)",
      "command": "${workspace}/build_and_run.sh",
      "args": ["run"],
      "cwd": "${workspace}"
    }
  ]
}
